@model _19033684_Kumar_Pulami.Models.ViewModel.Terminal.TerminalViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<br>
<br>
<br>
<div class="row">
    <h2>Terminal Details</h2>
    <hr/>
    <div class="col">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TerminalID" class="control-label"></label>
                <input asp-for="TerminalID" class="form-control" readonly="readonly/>
                <span asp-validation-for="TerminalID" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="TerminalName" class="control-label"></label>
                <input asp-for="TerminalName" class="form-control" />
                <span asp-validation-for="TerminalName" class="text-danger"></span>
            </div>
            <div class="row form-group">
            <div class="col">
                <br>
                <br>
                <input type="submit" value="Update" class="btn btn-success" />                
                @Html.ActionLink("Back To Index", "Index", "ManageTerminal", htmlAttributes: new {@class = "btn btn-primary"})
                <br>
                <br>
            </div>
        </div> 
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


