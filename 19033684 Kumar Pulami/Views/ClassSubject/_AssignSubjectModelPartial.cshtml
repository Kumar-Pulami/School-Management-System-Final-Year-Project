@model _19033684_Kumar_Pulami.Models.ViewModel.BatchGradeSubject.ClassSubjectAssignViewModel


<div class="modal fade" id="assignSubject">
    <div class ="modal-dialog">
        <div class="modal-content">
            <h4 class="modal-title" id="assignSubjectLabel">Assign Subject</h4>
            <button type="button" class="close" data-dismiss="modal">
                <span>x</span>
            </button>

            <div class="modal-body">
                <form asp-action="AssignSubject">
                    <div class="form-group">
                        <label asp-for="Batch" class="control-label"></label>
                        <input asp-for="Batch" class="form-control" />
                        <span asp-validation-for="Batch" class="text-danger"></span>
                    </div>
                    <br>
                    <div class="form-group">
                        <label asp-for="Grade" class="control-label"></label>
                        <input asp-for="Grade" class="form-control" />
                        <span asp-validation-for="Grade" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SubjectID" class="control-label"></label>
                        @Html.DropDownListFor(model => model.SubjectID, new SelectList(ViewBag.SubjectList, "SubjectID", "SubjectName"), htmlAttributes: new {@class = "form-control"})
                        <span asp-validation-for="Grade" class="text-danger"></span>
                    </div>                
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success" data-save="modal">Save</button>
            </div>
        </div>
    </div>
</div>