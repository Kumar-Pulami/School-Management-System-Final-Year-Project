@model _19033684_Kumar_Pulami.Models.ViewModel.BatchGradeSubject.ClassSubjectAssignViewModel

@{
    ViewData["Title"] = "AssignSubject";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<br>
<br>
<h3>Assign Subject</h3>
<hr/>
<div class="row">
    <div class="col-md-7">
        <form asp-action="AssignSubject" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Batch" class="control-label"></label>
                @Html.DropDownListFor(model => model.Batch, new SelectList(ViewBag.BatchList), "Select Batch", htmlAttributes: new {@class = "form-control"})
                <span asp-validation-for="Batch" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="Grade" class="control-label"></label>
                @Html.DropDownListFor(model => model.Grade, new SelectList(ViewBag.GradeList), htmlAttributes: new {@class = "form-control"})
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="SubjectID" class="control-label"></label>
                @Html.DropDownListFor(model => model.SubjectID, new SelectList(ViewBag.SubjectList, "SubjectID", "SubjectName"), htmlAttributes: new {@class = "form-control"})
            </div>
            <div class="d-block">
                    <span asp-validation-for="Batch" class="text-danger d-block"></span>
                    <span asp-validation-for="Grade" class="text-danger d-block"></span>
                    <span asp-validation-for="SubjectID" class="text-danger d-block"></span>
            </div>
            <br>
             <div class="row form-group">
                <div class="col">
                    <br>
                    <br>
                    <input type="submit" value="Assign Subject" class="btn btn-success" />
                    @Html.ActionLink("Back To Index", "Index", "ClassSubject", htmlAttributes: new {@class = "btn btn-primary"})
                    <br>
                    <br>
                </div>
            </div> 
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/GradeSubject.js" asp-append-version="true"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}