@model _19033684_Kumar_Pulami.Models.ViewModel.BatchGradeTerminal.BatchGradeTerminalViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}
<div class="row mt-5">
    <div class="col search-content d-flex justify-content-center align-content-center">
        <form asp-action="Index" method = "post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h4 class="pt-3"> Search Section</h4>
            <hr/>
            <div class="">
                <div class="form-group form-check-inline">
                    <label asp-for="Batch" class="control-label"></label>
                    @Html.DropDownListFor(model => model.Batch, new SelectList(ViewBag.BatchList), "Select Batch", htmlAttributes: new {@class = "form-control"})
                </div>
                <div class="form-group form-check-inline">
                    <label asp-for="Grade" class="control-label"></label>
                    @Html.DropDownListFor(model => model.Grade, new SelectList(ViewBag.GradeList), htmlAttributes: new {@class = "form-control"})
                </div>
                <div class="d-block">
                    <span asp-validation-for="Batch" class="text-danger d-block"></span>
                    <span asp-validation-for="Grade" class="text-danger d-block"></span>
                </div>
                <div class="form-group py-3">
                    <input type="submit" value="Search" class="btn btn-dark" />
                </div>
            </div>
        </form>
    </div>
</div>


@if (Model.TerminalList != null)
{

<div class="col mt-5">    
    <form asp-action="AssignTerminal" method="get">            
        <div class="row d-flex-inline justify-content-between">                
                <h4 class="col">Terminal Information</h4>
                <input type="submit" class="btn btn-success col" value="Assign Terminal"/>                   
         </div>      
    </form>
    <hr/>
    <div class = "row d-flex table-content">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Subject ID</th>
                    <th>Subject Name</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model.TerminalList) {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.TerminalID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TerminalName)
                        </td>                        
                        <td>
                            @Html.ActionLink("Delete", "Delete", new { Model.Batch, Model.Grade, item.TerminalID }, htmlAttributes: new {@class = "btn btn-danger"})
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
}


@section scripts{
   <script src="~/js/GradeTerminal.js" asp-append-version="true"></script>
   @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
